var big = require('big');

big.use('http');
big.use('view');
big.use('admin');

big.view.create({ path: __dirname + '/../view' }, function(err, _view){
  big.http.start({
    root: __dirname + '/../view'
    }, function(){
    big.http.app.use(big.view.middle({view: _view}));
    big.admin.start();
  });
});
