#!/usr/bin/env node

var big = require('big');

big.use('un');
big.use('admin');
big.use('auth');
big.use('auth-browserid');

big.use('user');

var logger = big.logger,
    async = require('async');

// TODO remove hack by having starts run automatically after .use
async.series([
  function(callback) {
    big.use('creature').start({}, callback);
  },
  function(callback) {
    big.use('space').start({}, callback);
  }],
function(err, results) {
  if (err) { throw err; }

  big.un.start({
    path: __dirname + '/../view',
    root: __dirname + '/../public'
    }, function() {
      big.admin.start();
  });
});
